<Application
    x:Class="WSharp.Wpf.Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Include the Dragablz Material Design style  -->
                <!--<ResourceDictionary Source="pack://application:,,,/Dragablz;component/Themes/materialdesign.xaml" />-->

                <ResourceDictionary Source="pack://application:,,,/WSharp.Wpf.Material;component/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WSharp.Wpf.Material;component/Themes/Recommended/Primary/DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WSharp.Wpf.Material;component/Themes/Recommended/Accent/Lime.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WSharp.Wpf.Material;component/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <!--  tell Dragablz tab control to use the Material Design theme  -->
            <!--<Style BasedOn="{StaticResource MaterialDesignTabablzControlStyle}" TargetType="{x:Type dragablz:TabablzControl}" />-->

        </ResourceDictionary>
    </Application.Resources>
</Application>
