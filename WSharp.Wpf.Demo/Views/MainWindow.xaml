<Window
    x:Class="WSharp.Wpf.Demo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:WSharp.Wpf.Demo.Views"
    Title="WSharp WPF Demo application"
    Background="{DynamicResource PaperBrush}"
    FontFamily="Roboto"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource BodyBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WSharp.Wpf.Material;component/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <TabControl>
        <TabItem Header="Start">
            <TextBlock
                Margin="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource Body1TextBlock}"
                Text="This is the demo application for the WSharp WPF library for WSharp.Wpf"
                TextWrapping="Wrap" />
        </TabItem>
        <TabItem Header="Buttons">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:ButtonLikeControls />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Fields">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Fields />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Pickers">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Pickers />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Text">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Texts />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Expanders">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Expanders />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Logging">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Logging DataContext="{Binding LoggingViewModel}" />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Slider">
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                <views:Sliders />
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
