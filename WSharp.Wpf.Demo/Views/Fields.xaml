    xmlns:controls="clr-namespace:WSharp.Wpf.Controls;assembly=WSharp.Wpf"
    xmlns:views="clr-namespace:WSharp.Wpf.Demo.Views">
    <StackPanel Orientation="Vertical">
        <views:TextBoxes />
